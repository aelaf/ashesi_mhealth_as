<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
    	android:shrinkColumns="*"
     >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textViewDate"
                android:layout_height="wrap_content"
                android:layout_span="1"
                android:text="@string/date"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textHealthPromotionDate"
                android:layout_span="3"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView3"
                android:layout_span="1"
                android:layout_height="wrap_content"
                android:text="@string/latitude"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/latitude_txt"
               	android:layout_span="2"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal" >

                
            </EditText>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView4"
                android:layout_span="1"
                android:layout_height="wrap_content"
                android:text="@string/longitude"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/longitude_txt"
                android:layout_span="2"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal" />

            <Button
                android:id="@+id/location_btn"
                style="?android:attr/buttonStyleSmall"
                android:layout_span="1"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_action_locate"
                android:text="@string/set_location" 
                
                />

        </TableRow>



        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView6"
                android:layout_span="1"
                android:layout_height="wrap_content"
                android:text="@string/venue"
                android:textAppearance="?android:attr/textAppearanceLarge" />

       
            <EditText
                android:id="@+id/venue_txt"
                android:layout_span="3"
                android:layout_height="wrap_content"
                android:ems="10" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView2"
                android:layout_span="1"
                android:layout_height="wrap_content"
                android:text="@string/topic"
                android:textAppearance="?android:attr/textAppearanceLarge" />



            <EditText
                android:id="@+id/topic_txt"
                android:layout_span="3"
                android:layout_height="wrap_content"
                android:ems="10" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView7"
                android:layout_span="1"
                android:layout_height="wrap_content"
                android:text="@string/method"
                android:textAppearance="?android:attr/textAppearanceLarge" />



            <EditText
                android:id="@+id/method"
                android:layout_span="3"
                android:layout_height="wrap_content"
                android:ems="10" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView8"
                android:layout_span="1"
                android:layout_height="wrap_content"
                android:text="@string/target_audience"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        
            <EditText
                android:id="@+id/target_audienc_txt"
                android:layout_span="3"
                android:layout_height="wrap_content"
                android:ems="10" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow14"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView9"
                android:layout_span="1"
                android:layout_height="wrap_content"
                android:text="@string/number_of_audience"
                android:textAppearance="?android:attr/textAppearanceLarge" />



            <EditText
                android:id="@+id/audience_number_txt"
                android:layout_span="3"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow16"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView10"
                android:layout_span="1"
                android:layout_height="wrap_content"
                android:text="@string/remarks"
                android:textAppearance="?android:attr/textAppearanceLarge" />

      

            <EditText
                android:id="@+id/remarks_txt"
                android:layout_span="3"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow18"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textHealthPromoPicture"
                android:layout_span="2"
                android:layout_height="wrap_content"
                android:text="@string/picture"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/healthpromo_pic_snap"
                android:layout_span="1"
                android:layout_height="wrap_content"
                android:text="@string/snap"/>
            <Button
                android:id="@+id/healthpromo_pic_select"
                android:layout_span="1"
                android:layout_height="wrap_content"
                android:text="@string/select"/>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow20"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <Button
                android:id="@+id/save_btn"
                android:layout_span="1"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_action_done"
                android:text="@string/save" />
            
            <Button
                android:id="@+id/healthPromotionRemove"
                android:layout_span="1"
                android:layout_height="wrap_content"
                android:text="@string/removeRecord"
                android:visibility="invisible" />

        </TableRow>
        <TableRow
            android:id="@+id/tableRow21"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >
            <ImageView 
        		android:id="@+id/imageHealthPromotion"
        		android:layout_width="wrap_content"
        		android:layout_span="4"
       			 android:layout_height="300dp"
      			></ImageView>
         </TableRow>

    </TableLayout>
</ScrollView>
