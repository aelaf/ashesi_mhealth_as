<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/TableLayout1"
    android:stretchColumns="*"
    android:shrinkColumns="*"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <TextView 
            android:id="@+id/textStatus"
            android:layout_height="wrap_content"
            android:layout_span="4"
            />
    </TableRow>

    <TableRow
        android:id="@id/tableRow3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_span="4"
             >

            <RadioButton
                android:id="@+id/radioVaccineScheduleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/vaccine_view_schedule" />

            <RadioButton
                android:id="@+id/radioVaccineRecordView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vaccine_view_record" />

           
        </RadioGroup>

    </TableRow>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Spinner
            android:id="@+id/spinnerRecordVaccinVaccines"
            android:layout_height="wrap_content"
            android:layout_span="3" />

        <Button
            android:id="@+id/buttonAddVaccine"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:text="@string/record" />
    </TableRow>

    <TableRow
        android:id="@+id/LinearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <GridView
            android:id="@+id/gridView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:numColumns="4" >
        </GridView>
    </TableRow>

</TableLayout>
