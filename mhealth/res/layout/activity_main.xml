<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
	
        <TextView
            android:id="@+id/textStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/statusOpen" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
    		android:shrinkColumns="*"
     		>

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

					<EditText
					    android:id="@+id/editCHOName"
					    android:layout_height="wrap_content"
					    android:layout_span="1" >

					    <requestFocus />
					</EditText>
					
                    <Button
                        android:id="@+id/buttonMainLoginStart"
                        android:layout_height="wrap_content"
                        android:layout_span="1" 
                        android:text="@string/open" />
             
               
            </TableRow>
            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/buttonMainOpenRecord"
                        android:layout_height="wrap_content"
                        android:text="@string/record"
                        android:enabled="false" 
                        android:layout_span="1" 
                        />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                    <Button
                        android:id="@+id/buttonMainKnowledge"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:layout_span="1" 
                        android:text="@string/knowledge" />

            </TableRow>
            <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

				  <Button
				      android:id="@+id/buttonAddCommunity"
				      android:layout_height="wrap_content"
				      android:enabled="false"
				      android:layout_span="1" 
				      android:text="@string/add_community" />
            
        </TableRow>
        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

				  <Button
				      android:id="@+id/buttonHealthPromotions"
				      android:layout_height="wrap_content"
				      android:enabled="false"
				      android:layout_span="1" 
				      android:text="@string/HealthPromotion" />
            
        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ListView
                android:id="@+id/list"
                android:layout_span="2" 
                android:layout_height="wrap_content" >
            </ListView>
				  
		</TableRow>		      
       

        
        </TableLayout>
		<LinearLayout
    		android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="96dp"
                android:contentDescription="Ashesi Logo"
                android:src="@drawable/ashesilogo" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="96dp"
                android:contentDescription="STAR-Ghana"
                android:src="@drawable/star_ghana" />

        </LinearLayout>
</LinearLayout>