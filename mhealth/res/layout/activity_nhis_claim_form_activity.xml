<ScrollView  xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    android:layout_weight="1">

<TableLayout
    android:id="@+id/TableLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="fill"
    android:orientation="vertical"

    android:stretchColumns="*"
    android:shrinkColumns="*"
    tools:context=".NhisClaimFormActivity" >
    <!-- 2 columns -->
    <TableRow
        android:id="@+id/tableRow13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/buttoncolor"
        android:padding="5dip" >
        <TextView
            android:id="@+id/textView3"
            android:text="Claim Form"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textStyle="bold"
            />
    </TableRow>
    <View
        android:layout_height="2dip"
        android:background="#000000" />
<TableRow
    android:id="@+id/tableRow20"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dip" >
    <TextView
        android:id="@+id/textView1"
        android:text="@string/dateOfService"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Select date using date picker and click set button to set date for the appropiate visit.)"
        android:id="@+id/textView13"
        android:layout_column="1"
        android:textStyle="italic"
        android:layout_span="4"
        android:textColor="@color/buttoncolor"/>
</TableRow>
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >


        <DatePicker
            android:id="@+id/dpBirthDate"
            android:layout_span="3"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:calendarViewShown="false"
            android:layout_gravity="left|top"
            />
    </TableRow>
    <TableRow
        android:id="@+id/tableRow15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1st Visit/Admission"
            android:id="@+id/textView"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="- -/- -/- -"
            android:id="@+id/visitOneTextView"
            android:layout_span="2"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="set"
            android:id="@+id/setButtonForVisitOne"
            android:layout_column="3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="unset"
            android:id="@+id/unsetButtonForVisitOne"
            android:layout_column="4" />
    </TableRow>
    <TableRow
        android:id="@+id/tableRow16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2nd Visit/discharge"
            android:id="@+id/textView4"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="- -/- -/- -"
            android:id="@+id/visitTwoTextView"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="set"
            android:id="@+id/setButtonForVisitTwo"
            android:layout_column="3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="unset"
            android:id="@+id/unsetButtonForVisitTwo"
            android:layout_column="4" />
    </TableRow>
    <TableRow
        android:id="@+id/tableRow17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3rd Visit"
            android:id="@+id/textView5"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="- -/- -/- -"
            android:id="@+id/visitThreeTextView"
            android:layout_span="2"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="set"
            android:id="@+id/setButtonForVisitThree"
            android:layout_column="3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="unset"
            android:id="@+id/unsetButtonForVisitThree"
            android:layout_column="4" />
    </TableRow>
    <TableRow
        android:id="@+id/tableRow18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4th visit"
            android:id="@+id/textView6"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="- -/- -/- -"
            android:id="@+id/visitFourTextView"
            android:layout_span="2"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="set"
            android:id="@+id/setButtonForVisitFour"
            android:layout_column="3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="unset"
            android:id="@+id/unsetButtonForVisitFour"
            android:layout_column="4" />
    </TableRow>
    <!-- just draw a red line -->
    <View
        android:layout_height="2dip"
        android:background="#000000" />
    <TableRow
        android:id="@+id/tableRow19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

    <TextView
        android:id="@+id/textView7"
        android:text="Services Provided"
        android:textStyle="bold"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Fill service information and click Add claim button below)"
            android:id="@+id/textView11"
            android:layout_column="1"
            android:layout_span="4"
            android:textStyle="italic"
            android:textColor="@color/buttoncolor"/>
    </TableRow>
    <!-- edittext span 2 column -->
    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >
        <TextView
            android:id="@+id/textCommunityMembersRecTypeofService"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:text="@string/typeOfService" />
        <Spinner
            android:id="@+id/spinnerTypeOfServices"
            android:layout_span="4"
            android:layout_height="wrap_content" />
    </TableRow>


    <!-- 3 columns -->
    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <TextView
            android:id="@+id/textCommunityMembersRecOutcome"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:text="@string/typeOfOutcomes" />
        <Spinner
            android:id="@+id/spinnerOutcomes"
            android:layout_span="4"
            android:layout_height="wrap_content" />
    </TableRow>

    <!-- display this button in 3rd column via layout_column(zero based) -->
    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <TextView
            android:id="@+id/textCommunityMembersRecAttendance"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:text="@string/typeOfAttendance" />
        <Spinner
            android:id="@+id/spinnerAttendance"
            android:layout_span="4"
            android:layout_height="wrap_content" />
    </TableRow>
    <!-- display this button in 2nd column via layout_column(zero based) -->
    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <TextView
            android:id="@+id/textCommunityMembersRecDiagnosis"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:text="@string/diagnosis" />
        <Spinner
            android:id="@+id/spinnerDiagnosis"
            android:layout_span="3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_diagnosis"
            android:id="@+id/addDiagnosisBtn"
            android:layout_column="4" />
    </TableRow>
    <TableRow
        android:id="@+id/tableRow9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >


    <!--ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView2"
        android:layout_column="1"
        android:layout_span="4"/-->
</TableRow>
    <!-- display this button in 2nd column via layout_column(zero based) -->
    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <TextView
            android:id="@+id/textCommunityMembersRecProcedure"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:text="@string/procedure" />
        <Spinner
            android:id="@+id/spinnerProcedure"
            android:layout_span="3"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_procedure"
            android:id="@+id/addProcedureBtn"
            android:layout_column="4" />
    </TableRow>
    <TableRow
        android:id="@+id/tableRow10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/proceduresListView"
            android:layout_column="1"
            android:layout_span="4" />

    </TableRow>
    <!-- display this button in 2nd column via layout_column(zero based) -->
    <TableRow
        android:id="@+id/tableRow7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <TextView
            android:id="@+id/textCommunityMembersRecInvestigation"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:text="@string/investigation" />
        <Spinner
            android:id="@+id/spinnerInvestigation"
            android:layout_span="3"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_investigation"
            android:id="@+id/addInvestigationBtn"
            android:layout_column="4" />
    </TableRow>
    <TableRow
        android:id="@+id/tableRow11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >


        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/investigationListView"
            android:layout_column="1"
            android:layout_span="4"/>
    </TableRow>
    <TableRow
        android:id="@+id/tableRow8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >

        <TextView
            android:id="@+id/textCommunityMembersRecMedicines"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:text="@string/medicines" />
        <Spinner
            android:id="@+id/spinnerMedicines"
            android:layout_span="2"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/quantityMedicine"
            android:layout_span="1"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:inputType="number" >
        </EditText>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_medicine"
            android:id="@+id/addMedicineBtn"
            android:layout_column="4" />

    </TableRow>
    <TableRow
        android:id="@+id/tableRow12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" >


        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/medicineListView"
            android:layout_column="1"
            android:layout_span="4"/>
    </TableRow>
    <View
        android:layout_height="2dip"
        android:background="#000000" />
    <TableRow
        android:id="@+id/tableRow14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_claim"
            android:id="@+id/add_claim"
            android:layout_column="0"
            android:layout_span="5"/>
    </TableRow>
</TableLayout>
  </ScrollView>