<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="10dip" >
     
    <!-- Content of Resources-->

    <TextView
        android:id="@+id/resource_mat"
        android:layout_width="370dip"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="@string/resourceMaterial"
        android:textColor="#040404"
        android:textSize="15sp"
        android:textStyle="bold"
        android:typeface="sans" />
 
    <!-- Category -->

    <TextView
        android:id="@+id/res_type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/resource_mat"
        android:layout_marginTop="1dip"
        android:text="@string/resourceType"
        android:textColor="#343434"
        android:textSize="12sp" />
 
    <!-- Category -->

    <TextView
        android:id="@+id/category_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/resource_mat"
        android:layout_marginRight="5dip"
        android:gravity="right"
        android:text="@string/categories"
        android:textColor="#10bcc9"
        android:textSize="12sp"
        android:textStyle="bold" />
 
     <!-- Rightend Arrow -->
     <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
 
</RelativeLayout>
